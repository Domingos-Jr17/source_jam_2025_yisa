{
  "name": "yisa-document-management",
  "version": "1.0.0",
  "description": "YISA - Digital School Documents Platform for Mozambique",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "pwa-build": "vite build --mode pwa",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "zustand": "^4.4.7",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "qrcode": "^1.5.3",
    "html5-qrcode": "^2.3.8",
    "pdf-lib": "^1.17.1",
    "@tanstack/react-query": "^5.8.4",
    "framer-motion": "^10.16.16",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.0.10",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4",
    "typescript": "^5.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "vitest": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "jsdom": "^22.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "education",
    "mozambique",
    "pwa",
    "offline-first",
    "document-management",
    "qr-code",
    "school-transfer"
  ],
  "author": "YISA Team - MozDev & Maputo Frontenders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Domingos-Jr17/source_jam_2025_yisa.git"
  },
  "bugs": {
    "url": "https://github.com/Domingos-Jr17/source_jam_2025_yisa/issues"
  },
  "homepage": "https://yisa.education.mz"
}